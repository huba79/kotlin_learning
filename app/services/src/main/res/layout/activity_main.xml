<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/startClassicServiceButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Classic Service"
        app:layout_constraintBottom_toTopOf="@+id/startJobIntentServiceButtonId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startJobIntentServiceButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Staret Job Intent Service"
        app:layout_constraintBottom_toTopOf="@+id/stopClassicServiceButtonId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startClassicServiceButtonId" />

    <Button
        android:id="@+id/stopClassicServiceButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Classic Service"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startJobIntentServiceButtonId" />
</androidx.constraintlayout.widget.ConstraintLayout>