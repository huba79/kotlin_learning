<resources>
    <!-- Base application theme. -->
    <!-- Using Material Design 3 guidelines. -->
    <style name="theme_widgets" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_dark</item>
        <item name="colorOnPrimary">@color/white_shade1</item>
        <item name="colorPrimaryVariant">@color/green_solid</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_deep</item>
        <item name="colorOnSecondary">@color/white_shade1</item>
        <item name="colorSecondaryVariant">@color/purple_light</item>

        <!-- Tertiary brand color. -->
        <item name="colorSurface">@color/beige_light</item>
        <item name="colorOnSurface">@color/bordeaux_dark</item>

        <item name="colorError">@color/bordeaux_solid</item>
        <item name="colorOnError">@color/white_high</item>

        <item name="android:colorBackground">@color/white_shade2</item>
        <item name="colorOnBackground">?colorPrimary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?colorPrimaryVariant</item>
        <item name="actionBarTheme">@style/greenActionBar</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="theme_results" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_dark</item>
        <item name="colorOnPrimary">@color/white_shade1</item>
        <item name="colorPrimaryVariant">@color/orange_fire</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_deep</item>
        <item name="colorOnSecondary">@color/white_shade1</item>
        <item name="colorSecondaryVariant">@color/purple_light</item>

        <!-- Tertiary brand color. -->
        <item name="colorSurface">@color/beige_light</item>
        <item name="colorOnSurface">@color/bordeaux_dark</item>

        <item name="colorError">@color/bordeaux_solid</item>
        <item name="colorOnError">@color/white_high</item>

        <item name="android:colorBackground">@color/white_shade2</item>
        <item name="colorOnBackground">?colorPrimary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?colorPrimaryVariant</item>
        <item name="actionBarTheme">@style/orangeActionBar</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="theme_game" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_deep</item>
        <item name="colorOnPrimary">@color/blue_light_luminescent</item>
        <item name="colorPrimaryVariant">@color/blue_ice</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_deep</item>
        <item name="colorOnSecondary">@color/white_shade1</item>
        <item name="colorSecondaryVariant">@color/purple_light</item>

        <!-- Tertiary brand color. -->
        <item name="colorSurface">@color/beige_light</item>
        <item name="colorOnSurface">@color/bordeaux_dark</item>

        <item name="colorError">@color/bordeaux_solid</item>
        <item name="colorOnError">@color/white_high</item>

        <item name="android:colorBackground">@color/white_shade2</item>
        <item name="colorOnBackground">?colorPrimary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?colorPrimaryVariant</item>
        <item name="actionBarTheme">@style/orangeActionBar</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="greenActionBar" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">?colorOnTertiaryContainer</item>
        <item name="android:colorForeground">?colorOnPrimary</item>
    </style>

    <style name="orangeActionBar" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">?colorOnTertiaryContainer</item>
        <item name="android:colorForeground">?colorOnPrimary</item>
    </style>

    <style name="blueActionBar" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">?colorOnTertiaryContainer</item>
        <item name="android:colorForeground">?colorOnPrimary</item>
    </style>

</resources>