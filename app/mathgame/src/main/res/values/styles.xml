<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="game_action_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/active_element_height</item>
        <item name="android:layout_margin">@dimen/margin_element_spacing</item>
<!--        <item name="android:layout_weight">1</item>-->
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/shape_button_game</item>
    </style>

    <style name="app_action_button">
        <item name="android:gravity">center</item>
        <item name="android:background">"@drawable/shape_button_action"</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/active_element_height</item>
        <item name="android:layout_margin">25dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="text_input_label">
        <item name = "android:textStyle">bold</item>
    </style>

    <style name="result_buttons_style">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:backgroundTint">#FF5722</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">#F9FBE7</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_main_layout_bg" >
        <item name="android:background">?colorSecondaryVariant</item>
    </style>

</resources>