<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="game_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/active_element_height</item>
        <item name="android:layout_margin">@dimen/margin_element_spacing</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/shape_button_game</item>
    </style>

    <style name="action_button_style">
        <item name="android:gravity">center</item>
<!--        <item name="android:background">"@drawable/shape_button_action"</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_margin">25dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_shade1</item>
    </style>

    <style name="result_buttons_style">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:background">@drawable/shape_button_result</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">#F9FBE7</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">@dimen/active_element_height</item>
    </style>

    <style name="text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColorHint">?colorAccent</item>
        <item name="boxStrokeColor">@color/color_border</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="inputLayout_editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:inputType">number</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:maxWidth">180dp</item>
        <item name="android:textColor">?colorPrimary</item>

    </style>


</resources>