<resources>
    <!-- Base application theme. -->
    <!-- Using Material Design 3 guidelines. -->
    <!-- Only applies to the Widgets theme so far -->
    <style name="Theme.Widgets" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/solid_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/deep_blue</item>

        <item name="colorPrimaryContainer">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorPrimaryInverse">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorOnSecondary">@color/dark</item>
        <item name="colorSecondaryContainer">@color/bg_dark</item>
        <item name="colorOnSecondaryContainer">@color/bg_dark</item>

        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/bg_dark</item>
        <item name="colorTertiaryContainer">@color/bg_dark</item>
        <item name="colorOnTertiaryContainer">@color/bg_dark</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>


        <!-- Customize your theme here. -->
    </style>

